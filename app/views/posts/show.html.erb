<div class="container">
  <p id="notice"><%= notice %></p>

    <p>
      <strong>Tytuł:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Url:</strong>
      <%= @post.url %>
    </p>

    <p>
      <strong>Treść:</strong>
      <%= @post.content %>
    </p>

    <% if can? :update, @post %>
      <%= link_to 'Edytuj', edit_post_path(@post) %>
    <% end %>
    <%= link_to 'Back', posts_path %>
    <br>
    <br>
    <% if @post.comments.any? %>
    <h3>Komentarze</h3
      <%= render @post.comments %>

    <% end %>

    <hr>
    <p>Dodaj komentarz</p>
    <%= form_for ([@post, @post.comments.build]) do |f| %>
      <%= f.text_area :content %>
      <%= submit_tag "Dodaj komentarz" %>
    <% end %>
</div>
